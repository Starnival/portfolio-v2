---
import { Image } from "astro:assets";
---

<Image
    src="/img/foto-perfil.webp"
    alt="Foto de Perfil"
    width={200}
    height={200}
    format="webp"
    quality={100}
    loading="eager"

    class="profile-image"

/>


<style>

    .profile-image {
        border-radius: 2rem;

        width: 100%;
        height: 100%;

        object-fit: cover;
        transition: transform 0.3s ease-in-out;
        cursor: pointer;

        &:hover {
            transform: scale(1.1);
        }
    }
    
</style>